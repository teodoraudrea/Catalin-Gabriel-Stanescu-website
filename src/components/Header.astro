---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
  <nav>
    <h2><a href="/">{SITE_TITLE}</a></h2>
    <button class="burger" aria-label="Toggle menu">â˜°</button>
    <div class="internal-links">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/blog">Blog</HeaderLink>
      <HeaderLink href="/get-in-touch">Get in touch</HeaderLink>
    </div>
  </nav>
</header>

<style>
  header {
    margin: 0;
    padding: 0 1em;
    background: white;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }
  h2 {
    margin: 0;
    font-size: 1em;
  }
  /* Title link styling with the desired padding */
  h2 a {
    text-decoration: none;
    padding: 1em 1em 1em 0em; /* top, right, bottom, left */
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: relative;
  }
  /* Generic nav link styling (used by non-title links) */
  nav a {
    padding: 1em 0.5em 1em 0em;
    color: black;
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    border-bottom-color: blue;
  }
  .internal-links {
    display: flex;
    flex-direction: row;
  }
  /* Override internal links to have a uniform padding of 1em */
  .internal-links a {
    padding: 1em;
  }
  .social-links,
  .social-links a {
    display: flex;
  }
  .burger {
    display: none;
    background: none;
    border: none;
    font-size: 1.5em;
    cursor: pointer;
  }
  @media (max-width: 720px) {
    .social-links {
      display: none;
    }
    .burger {
      display: block;
    }
    .internal-links {
      display: none;
      flex-direction: column;
      position: absolute;
      top: 60px; /* adjust as necessary based on header height */
      left: 0;
      right: 0;
      background: white;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      z-index: 10;
    }
    .internal-links.active {
      display: flex;
    }
    .internal-links a {
      padding: 1em;
      border-bottom: 1px solid #eee;
    }
  }
</style>

<!-- @ts-ignore: Ignore TS error for client directives -->
<script type="module" client:load src="/burger.js"></script>
