---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const { title, description } = Astro.props;
title: "Get in Touch"
description: "Have a question or want to work together? Send me a message!"

---



<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
    <style>
      .form-container {
        max-width: 720px;
        margin: 2em auto;
      }
      .form-container h1 {
        margin-bottom: 1em;
      }
      form {
        display: flex;
        flex-direction: column;
      }
      label {
        margin-bottom: 0.5em;
        font-weight: bold;
      }
      input,
      textarea {
        padding: 0.75em;
        margin-bottom: 1em;
        border: 1px solid #ccc;
        border-radius: 4px;
      }
      button {
        background-color: var(--prussian-blue);
        color: #fff;
        padding: 0.75em;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: x-large;
      }
      button:hover {
        background-color: var(--oxford-blue-2);
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <div class="form-container">
        <h1>Get in touch</h1>
        <p>Send me a message if you want to collaborate.</p>
        <form
		action="https://formspree.io/f/mdkajqkk"
		method="POST"
		>
		<label>
			Name:
			<input type="email" name="email">
		</label>
		<label>
			Email:
			<input type="email" name="email">
		</label>
		<label>
			Message:
			<textarea name="message"></textarea>
		</label>
		<!-- your other form fields go here -->
		<button type="submit">Send</button>
		</form>
      </div>
    </main>
    <Footer />
  </body>
</html>
